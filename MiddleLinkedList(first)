int getLength(Node* head) {
    int count = 0;
    while (head != NULL) {
        count++;
        head = head->next;
    }
    return count;
}

Node* findMiddle(Node* head) {
    int len = getLength(head);
    int mid = len / 2;  

    Node* temp = head;
    for (int i = 0; i < mid; i++)
        temp = temp->next;

    return temp;
}
